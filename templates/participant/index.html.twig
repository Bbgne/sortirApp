{% extends 'base.html.twig' %}

{% block title %}Home | {{ parent() }}{% endblock %}

{% block body %}

    {% if app.user %}

        {% if is_granted("ROLE_ADMIN") %}
            <div>Vous êtes admin!</div>
        {% endif %}

    <div>
        <p>Date du jour :  {{ "now"|date("d-m-Y") }}</p>
        <p>Participant : {{ participant.prenom|capitalize }} {{ participant.nom|first }}.</p>
    </div>

    <div class="example-wrapper">
        <h1>Page :  PAGE ACCUEIL </h1>


        <div class="infos">
            <table>
                <tr>
                    <th>Nom de la sortie</th>
                    <th>Date de la sortie</th>
                    <th>Clôture</th>
                    <th>inscrits/places</th>
                    <th>Etat</th>
                    <th>Inscrit</th>
                    <th>Organisateur</th>
                    <th>Actions</th>
                </tr>
                {% for sortie in sorties %}
                    <tr>
                        <td>{{ sortie.nom }} </td>
                        <td>{{ sortie.dateHeureDebut|date("d-m-Y") }}</td>
                        <td>{{ sortie.dateLimiteInscription|date("d-m-Y") }}</td>
                        <td>{{ sortie.participants|length }}/{{ sortie.nbInscriptionsMax }}</td>
                        <td>{{ sortie.etat.libelle }}</td>
                        <td>Oui</td>
                        <td>{{ sortie.organisateur.nom }} {{ sortie.organisateur.prenom|first }}.</td>
                        <td>Modifier - Annuler</td>
                    </tr>
                {% endfor %}
            </table>
        </div>

    </div>

    {% else %}
        <div>Vous n'êtes pas connecté, veuillez <a href="login.html.twig">vous connecter</a></div>

    {% endif %}

{% endblock %}